{
  "tech_stack": ["PHP", "MySQL", "Apache", "JavaScript", "HTML", "CSS"],
  "features": [
    {
      "name": "Add Asset",
      "description": "API to add a new asset to the inventory directly (mostly for Head Office).",
      "files": ["add_asset.php"],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/add_asset.php": {
            "post": {
              "summary": "Add a new asset",
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "asset_name": {"type": "string"},
                        "location": {"type": "string"},
                        "category": {"type": "string"}
                      }
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Asset added successfully"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Request Approval (AGL)",
      "description": "API to submit an approval request for asset actions (Add, Service, Delete) for AGL factory.",
      "files": ["request_approval_agl.php", "approval_functions.php"],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/request_approval_agl.php": {
            "post": {
              "summary": "Create an approval request",
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "action_type": {"type": "string", "enum": ["ADD", "SERVICE", "DELETE"]},
                        "requested_by": {"type": "string"},
                        "factory": {"type": "string"},
                        "asset_name": {"type": "string"}
                      }
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Request submitted"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Process Approval",
      "description": "API to approve or reject a pending request.",
      "files": ["process_approval.php", "approval_functions.php"],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/process_approval.php": {
            "post": {
              "summary": "Process an approval",
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "approval_id": {"type": "integer"},
                        "action": {"type": "string", "enum": ["APPROVE", "REJECT"]},
                        "approver": {"type": "string"}
                      }
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Approval processed"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Get Assets",
      "description": "API to retrieve all assets from the Head Office inventory.",
      "files": ["get_assets.php"],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/get_assets.php": {
            "get": {
              "summary": "List all assets",
              "responses": {
                "200": {
                  "description": "List of assets",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "array",
                        "items": {
                          "type": "object"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  ]
}